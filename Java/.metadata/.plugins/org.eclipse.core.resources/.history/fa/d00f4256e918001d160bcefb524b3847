package JavaArray;

import java.util.Scanner;

public class ArrayVetor2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int [] num=new int [6];
		int somaPar=0,somaImpar=0,contPar=0,contImpar=0,x;
		
		Scanner ler=new Scanner (System.in);
		
		for(x=0;x<6;x++)
		{
			System.out.printf("Digite um número");
			num[x]=ler.nextInt();
			{
				if(num[x]%2==0)
				{
					somaPar+=num[x];
					contPar++;
				}
				else
				{
					somaImpar+=num[x];
					contImpar++;
				}
			}
		}
		
		System.out.printf("\nOs números pares foram: ",contPar);
		System.out.printf("\nA soma dos números pares foi de: ",somaPar);
		System.out.printf("\nOs números ímpares foram: ",contImpar);
		System.out.printf("\nA soma dos números ímpares foi de: ",somaImpar);
		
		
		
	}

}
